{
  "name": "px2rem",
  "displayName": "px2rem",
  "description": "Convert px to rem unit based on width",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "px2rem.baseWidth": {
          "type": "number",
          "default": 1440,
          "description": "Base width for converting PX to REM"
        }
      }
    },
    "commands": [
      {
        "command": "px2rem.convert",
        "title": "Convert px to rem based on width"
      },
      {
        "command": "px2rem.updateBaseWidth",
        "title": "Update base width"
      }
    ],
    "keybindings": [
      {
        "command": "px2rem.convert",
        "key": "ctrl+alt+q"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "@vscode/test-electron": "^2.3.2"
  }
}
